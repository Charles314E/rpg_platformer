///create_player_world_states()
switch Sex
{
    case "Male":
                worldStanding = ani_PlayerWorldMap;
                worldLeft = ani_PlayerWorldMap_left;
                worldRight = ani_PlayerWorldMap_right;
                worldUp = ani_PlayerWorldMap_up;
                worldDown = ani_PlayerWorldMap_down;
        break;
    case "Female":
                worldStanding = ani_Player2WorldMap;
                worldLeft = ani_Player2WorldMap_left;
                worldRight = ani_Player2WorldMap_right;
                worldUp = ani_Player2WorldMap_up;
                worldDown = ani_Player2WorldMap_down;
        break;
}
